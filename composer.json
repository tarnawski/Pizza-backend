{
  "name": "tomasz/pizza.backend",
  "license": "proprietary",
  "type": "project",
  "autoload": {
    "psr-4": {
      "": "src/"
    },
    "classmap": [
      "app/AppKernel.php",
      "app/AppCache.php"
    ]
  },

  "require": {
    "php": ">=5.3.9",
    "symfony/symfony": "2.8.*",
    "ext-pdo": "*",
    "ext-pdo_pgsql": "*",
    "doctrine/orm": "^2.4.8",
    "doctrine/doctrine-bundle": "~1.4",
    "symfony/swiftmailer-bundle": "~2.3",
    "symfony/monolog-bundle": "~2.4",
    "sensio/distribution-bundle": "~5.0",
    "sensio/framework-extra-bundle": "^3.0.2",
    "incenteev/composer-parameter-handler": "~2.0",
    "doctrine/doctrine-fixtures-bundle": "^2.3",
    "fzaninotto/faker": "^1.5",
    "friendsofsymfony/rest-bundle": "1.7.*",
    "jms/serializer-bundle": "~0.13",
    "nelmio/api-doc-bundle": "~2.7",
    "nelmio/cors-bundle": "~1.4.0"
  },

  "require-dev": {
    "sensio/generator-bundle": "~3.0",
    "behat/behat": "~3.0",
    "behat/mink": "~1.6",
    "behat/mink-extension": "~2.0",
    "behat/symfony2-extension": "~2.0",
    "behat/mink-browserkit-driver": "~1.2",
    "bossa/phpspec2-expect": "*",
    "coduo/php-matcher": "~1.1",
    "phpunit/phpunit": "~4.3",
    "squizlabs/php_codesniffer": "~2.0",
    "phpmd/phpmd" : "@stable",
    "pdepend/pdepend" : "2.2.1",
    "sebastian/phpcpd": "^2.0",
    "codifico/parameter-bag-extension": "dev-master",
    "codifico/web-api-extension": "1.0.x@dev",
    "phploc/phploc": "^2.1"
  },
  "scripts": {
    "post-install-cmd": [
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
    ],
    "post-update-cmd": [
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
      "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
    ],
    "compile": [
      "php app/console doctrine:schema:update --force --env=prod",
      "php app/console doctrine:fixture:load --env=prod --no-debug",
      "rm -rf app/cache/prod/*"
    ]
  },
  "config": {
    "bin-dir": "bin"
  },
  "extra": {
    "symfony-app-dir": "app",
    "symfony-web-dir": "web",
    "symfony-assets-install": "relative",
    "incenteev-parameters": {
      "file": "app/config/parameters.yml",
      "env-map": {
        "database_name": "SYMFONY__DATABASE_NAME",
        "database_user": "SYMFONY__DATABASE_USER",
        "database_host": "SYMFONY__DATABASE_HOST",
        "database_port": "SYMFONY__DATABASE_PORT",
        "database_password": "SYMFONY__DATABASE_PASSWORD"
      }
    }
  }
}
